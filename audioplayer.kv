Root:
    id: root_bl
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.08
        canvas:
            Color:
                rgba:1,0,0,0
            Rectangle:
                pos:self.pos
                size:self.size

    	TextInput:
            id: dir_input
            size_hint_x: 0.8
            size_hint_y: 1
            multiline: False
            hint_text:"click show directory button or drop a folder"
            padding: [10, (self.height-self.line_height)/2]


        Button:
            id:load_button
            text: 'load'
            size_hint_x: 0.2
            size_hint_y: 1
            text: 'show directory'
            on_release: root.show()
    Label:
        id: file_count_label
        size_hint_y: 0.08
        text: " "
    FloatLayout:
        id: audio_fl
        size_hint: 0.9,0.84
        pos_hint:{'center_x': .5, 'center_y': .5}
        canvas:
            Color:
                rgba:0.95,0.85,0.26,0
            Rectangle:
                pos:self.pos
                size:self.size
        ScrollView:
            id: audio_scroll
            size_hint: (1, None)
            size: (audio_fl.width * 0.9, audio_fl.height * 0.8)
            pos_hint:{'center_x': .5, 'center_y': .5}
            do_scroll_x:False
            do_scroll_y: True
            canvas:
                Color:
                    rgba:1,0,0,0
                Rectangle:
                    pos:self.pos
                    size:self.size

            GridLayout:
                id: audio_list
                cols: 1
                width: audio_scroll.width
                size_hint: (None, None)
                pos_hint: {'center_x': .5}
                canvas:
                    Color:
                        rgba:1,0,0,0
                    Rectangle:
                        pos:self.pos
                        size:self.size





<AudioPanel>:
    id:audio_panel
    height: 90
    size_hint_y: None
    padding: [0,10,10,10]

    Button:
        size_hint_x: 0.1
        size_hint_y: 1
        background_normal: "./img/play_inverse.png"

    Label:
        size_hint_x: 0.15
        size_hint_y: 1
        text: audio_panel.set_progress()
    BoxLayout:
        size_hint_x:0.55
        size_hint_y: 1
        canvas:
            Color:
                rgba:0.95,0.85,0.26,0
            Rectangle:
                pos:self.pos
                size:self.size
        FloatLayout:
            pos_hint: {"x":0,"y":0}

            FloatLayout:
                pos_hint: {'x':0, 'y':0}

            FloatLayout:
                pos_hint: {'x':0, 'y':0}
                ProgressBar:
                    value:0
                    max:audio_panel.get_duration()
                    pos_hint:{'x': 0, 'y': 0}


    Slider:
        size_hint_x:0.2
        size_hint_y: 1
        min: 0.0
        max: 1.0
        value: 1.0
        orientation:'horizontal'
        value_track:True
        value_track_color:[0.95, 0.85, 0.26, 1]

<LoadDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            show_hidden: True
            dirselect: True
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text,1)

<Dialog>:
    id: dialog_box
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        Label:
            text : dialog_box.message
            height: 30
            multiline: False
            text_size: dialog_box.width * 0.9, None

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "I got it"
                on_release: root.cancel()